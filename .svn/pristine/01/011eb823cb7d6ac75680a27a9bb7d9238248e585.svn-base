<div ng-controller="userCtrl">
    <div class="x_panel" >
        <div class="form-inline">
            <div class="form-group">
                <label>姓名：</label>
                <input type="text" ng-model="search.name"  class="form-control" />
            </div>
            <div class="form-group">
                <label>账号：</label>
                <input type="text" ng-model="search.account"  class="form-control" />
            </div>
            <button class="btn btn-primary" ng-click="find(1)" >查询</button>
            <button class="btn btn-default" ng-click="search={}" >重置</button>
            <button class="btn btn-primary pull-right" ng-click="edit()" >添加</button>
        </div>
    </div>
    <table class="table table-bordered table-striped table-hover" >
        <thead class="title">
        <tr>
            <th class="text-center">NO</th>
            <th>姓名</th>
            <th>性别</th>
            <th>行政区域</th>
            <th>籍贯</th>
            <th>手机号</th>
            <th>账号</th>
            <th>昵称</th>
            <th>角色</th>
            <th>创建人</th>
            <th>创建时间</th>
            <th style="width:120px">操作</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-if="pageModel.data.length == 0">
            <td colspan="100" class="text-center">暂无记录</td>
        </tr>
        <tr ng-repeat="item in pageModel.data">
            <td class="text-center">{{$index + 1+pageModel.pageSize*pageModel.pageIndex}}</td>
            <td>{{item.name}}</td>
            <td>{{item.sex}}</td>
            <td>{{item.communityName}}</td>
            <td>{{item.nativePlace}}</td>
            <td>{{item.phone}}</td>
            <td><span class="btn-link" ng-click="editAccount(item)">{{item.account||'添加账号'}}</span></td>
            <td>{{item.nickname}}</td>
            <td>{{item.roleId == 0?'超级管理员':item.roleName}}</td>
            <td>{{item.creatorName}}</td>
            <td>{{item.createTime| date:'yyyy-MM-dd HH:mm:ss'}}</td>
            <td>
                <a href='javascript:void(0)' ng-click='edit(item)' class='btn btn-xs btn-link'><span class='fa fa-edit'></span>编辑</a>
                <a href='javascript:void(0)' ng-click='del(item)'  class='btn btn-xs btn-link'><span class='fa fa-trash'></span>删除</a>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="page-footer clearfix" >
        <page page-model="pageModel"></page>
    </div>
</div>